{
  "parser": "babel-eslint",
  "extends": ["standard"],
  "env": {
    "browser": true,
    "mocha": true
  },
  "plugins": ["standard", "promise"],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "commonjs": true,
      "modules": true
    }
  },
  "rules": {
    "key-spacing": 0,
    "jsx-quotes": [2, "prefer-single"],
    "object-curly-spacing": [2, "always"],
    "camelcase": 0
  }
}
